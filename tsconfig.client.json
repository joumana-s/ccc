{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./public/dist",
    "rootDir": "./public",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["public/**/*.ts"],
  "exclude": ["node_modules", "dist", "server"]
}
